import bagette from "./../../src/icons/questions/bagette.svg";
import dolar from "./../../src/icons/questions/dolar.svg";
import folder from "./../../src/icons/questions/folder.svg";
import pencil from "./../../src/icons/questions/pencil.svg";
---

<div class="max-w-screen-xl m-auto p-4 mt-40" id="questions">
